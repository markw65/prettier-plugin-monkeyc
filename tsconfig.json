{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2020",
    "target": "ES2020",
    "checkJs": true /* Typecheck .js files. */,
    "lib": ["ES2020"],
    "outDir": "build",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "build"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
