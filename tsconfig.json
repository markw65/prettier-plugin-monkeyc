{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2020",
    "target": "ES2020",
    "checkJs": true /* Typecheck .js files. */,
    "lib": ["ES2020"],
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "build",
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": true,
    "strict": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
