{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "process",
      "command": "npx",
      "args": ["pegjs", "-o", "peg/monkeyc.cjs", "peg/monkeyc.pegjs"],
      "problemMatcher": ["$jshint"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "eslint",
      "problemMatcher": ["$eslint-stylish"],
      "label": "eslint: lint whole folder",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
