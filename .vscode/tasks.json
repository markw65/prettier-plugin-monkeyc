{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Parser",
      "type": "process",
      "command": "npx",
      "args": [
        "peggy",
        "-o",
        "peg/monkeyc.js",
        "--extra-options",
        "{\"cache\":true, \"format\":\"es\"}",
        "peg/monkeyc.peggy"
      ],
      "problemMatcher": ["$jshint"],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "npm",
      "dependsOn": "Build Parser",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "eslint",
      "problemMatcher": ["$eslint-stylish"],
      "label": "eslint: lint whole folder",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
