{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["build/**/*.js"],
  "rules": {
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "no-var": ["error"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-cond-assign": ["error", "except-parens"]
  }
}
